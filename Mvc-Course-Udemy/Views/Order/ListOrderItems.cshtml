@model IEnumerable<MyShop.Core.Model.OrderItem>

<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.itemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.itemPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.itemQuentity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.itemImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.itemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.itemPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.itemQuentity)
        </td>
        <td>
            <img class="img-fluid" style="height:50px" src="~/Content/ProductImage/@item.itemImage" />
        </td>
    </tr>
}

</table>
